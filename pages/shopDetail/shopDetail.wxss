.content{
    width: 100%;
    height: 100%;
    position: relative;
}
/*轮播图image class*/
.loop_image_style{
    width: 100%;
    height: 100%
}
/*商品名称背景*/
.good_info_back{
    height: 90px;
    widows: 100%;
    background-color: white;
    position: relative;
}
    /*good名称*/
    .good_info_title{
        display: block;
        position: absolute;
        top: 10px;
        left: 10px;
        right: 10px;
        height: 20px;
        line-height: 20px;
        text-align: left;
        overflow: hidden;
        text-overflow:ellipsis;
    }
/*tags*/
    .tags_back_view{
        display: block;
        position: absolute;
        top: 40px;
        left: 10px;
        right: 10px;
        height: 12px;
    }
        /*tags*/
        .tags{
            background-color: red;
            font-size: 10px;
            color: white;
            border-radius: 2px;
            margin-left: 5px;
            float: left;
        }
    /*商品价钱*/
    .good_info_price_back{
        height: 20px;
        position: absolute;
        top: 60px;
        left: 10px;
        right: 10px;
        bottom: 10px;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: center;
    }
        /*价钱字段*/
        .phone_price_name{
            font-size: 14px;
            color: #D2D2D2;
        }
        /*商品价钱*/
        .good_price{
            color:red;
            font-size: 17px;
        }
    /*积分背景*/
    .integral_back_view{
        height: 40px;
        position: relative;
        background-color: white;
    }
        /*积分图标*/
        .integral_image{
            width: 20px;
            height: 20px;
            position:absolute;
            left: 10px;
            top: 10px;
        }
        /*积分数字*/
        .integral_title{
            height: 20px;
            line-height: 20px;
            left: 32px;
            top: 10px;
            color: orange;
            position: absolute
        }
        /*信息名称*/
        .info_name{
            color: #D2D2D2;
            font-size: 15px;
            position: absolute;
            left: 10px;
            top: 10px;
            line-height: 20px;
            float: left;
        }
        /*信息内容*/
        .info_content{
            color: #333333;
            font-size: 15px;
            position: absolute;
            left: 70px;
            top: 10px;
            line-height: 20px;
            float: left;
        }
    /*评价标题背景*/
    .comment_title_back_view{
        height: 50px;
        position: relative;
    }
        /*评价晒单标题*/
        .comment_order_title{
            height: 50px;
            margin-left: 10px;
            line-height: 50px;
            color: #333333;
            font-size: 15px;
        }
        /*评价晒单内容*/
        .comment_order_content{
            height: 50px;
            margin-left: 2px;
            line-height: 50px;
            color: #444444;
            font-size: 15px;
        }
        /*评价image*/
        .comment_image{
            width: 20px;
            height: 20px;
            margin-right: 10px;
            margin-top: 15px;
            float: right;
        }
        /*好评数*/
        .comment_good_number{
            color:red;
            font-size: 15px;
            float: right;
            margin-right: 5px;
            height: 50px;
            line-height: 50px;
        }
        /*好评的标题*/
        .comment_good_title{
            color: #444444;
            font-size: 15px;
            float: right;
            height: 50px;
            line-height: 50px;
        }
    /*评论的列表*/
    .comment_list{
        width: 100%;
        position: relative;
        height:80px;
    }
        /*评价列表 用户信息*/
        .comment_list_userinfo_back{
            height: 20px;
            position: absolute;
            right: 10px;
            top: 5px;
            left: 10px;
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            justify-content: space-between;
            align-items: center;
        }
            /*用户头像*/
            .comment_user_image{
                width: 20px;
                height: 20px;
                float: left;
            }
            /*用户名字*/
            .comment_user_name{
                height: 20px;
                line-height: 20px;
                float: left;
                font-size: 15px;
            }
            .comment_start{
                width: 10px;
                height: 10px;
            }
            .comment_time{
                font-size: 10px;
            }
        /*评论的内容*/
        .comment_content_back_view{
            position: absolute;
            top: 30px;
            left: 10px;
            height: 50px;
            line-height: 25px;
            text-overflow:ellipsis;
            overflow: hidden;
        }